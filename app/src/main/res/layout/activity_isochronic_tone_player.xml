<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/ic_breathing">

    <!-- Isochronic Tone Title -->

    <!-- Pulse Rate Control -->

    <!-- Volume Control -->

    <!-- Set Session Button -->

    <TextView
        android:id="@+id/toneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="117dp"
        android:layout_y="53dp"
        android:text="Isochronic Tone"
        android:textColor="#00796B"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pulseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="54dp"
        android:layout_y="445dp"
        android:text="Pulse Rate: 10 Hz"
        android:textColor="#004D40"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/pulseRateSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="78dp"
        android:layout_y="527dp"
        android:max="30"
        android:min="1"
        android:progress="10" />

    <TextView
        android:id="@+id/volumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="45dp"
        android:layout_y="294dp"
        android:text="Volume: 0.5"
        android:textColor="#004D40"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="74dp"
        android:layout_y="346dp"
        android:max="100"
        android:progress="50" />

    <ImageView
        android:id="@+id/setSessionButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_x="14dp"
        android:layout_y="618dp"
        android:src="@drawable/clock"
        android:contentDescription="Set Session" />

    <!-- Session Duration Display -->

    <!-- Play Toggle Button -->

    <TextView
        android:id="@+id/sessionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="630dp"
        android:text="Session Duration: 5 min"
        android:textColor="#004D40"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/playToggleButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="161dp"
        android:layout_y="162dp"
        android:src="@drawable/play"
        android:contentDescription="Play" />

</AbsoluteLayout>
