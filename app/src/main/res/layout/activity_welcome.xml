<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gthree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Grid Layout with Two Columns (2 Buttons per Row) -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <!-- Ambient Music Button -->
            <Button
                android:id="@+id/natureButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/brain"
                android:text="Binaural Beats"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/startbuttonid"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/amb"
                android:text="Ambient Music"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Binaural Beats Button -->


            <!-- Solfeggio Frequencies Button -->
            <Button
                android:id="@+id/solfeggioButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/solf"
                android:text="Solfeggio"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Isochronic Tones Button -->
            <Button
                android:id="@+id/isochronicButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/entr"
                android:text="Isochronic Tones"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />



            <!-- Noise Generator Button -->
            <Button
                android:id="@+id/noiseButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/noise"
                android:text="Noise Generator"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Nature Sounds Button -->
            <Button
                android:id="@+id/binauralBeatsButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/surv"
                android:text="Mental Analysis"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!-- Help Button -->
            <Button
                android:id="@+id/helpbuttonid"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/helppp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!-- Exit Button -->
            <Button
                android:id="@+id/exitButtonid"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/greyaesth"
                android:text="Exit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </GridLayout>

    </LinearLayout>
</ScrollView>
