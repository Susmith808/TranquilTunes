<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gfive">

    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="122dp"
        android:layout_y="45dp"
        android:text="State: Neutral"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/playToggleBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="140dp"
        android:layout_y="80dp"
        android:contentDescription="Play"
        android:src="@drawable/play100"/>

    <SeekBar
        android:id="@+id/volume_slider"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_x="50dp"
        android:layout_y="312dp"
        android:max="30"
        android:progress="10"
        android:rotation="270" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume: 100%"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_x="120dp"
        android:layout_y="550dp" />

    <ImageView
        android:id="@+id/vol"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="140dp"
        android:layout_y="450dp"
        android:contentDescription="Play"
        android:src="@drawable/vol100"/>

    <ImageView
        android:id="@+id/timerBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="5dp"
        android:layout_y="450dp"
        android:contentDescription="Play"
        android:src="@drawable/timer100" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="619dp"
        android:text="Session Duration: 10 minutes"
        android:textSize="18sp"
        android:textStyle="bold" />


</AbsoluteLayout>
